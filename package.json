{
  "name": "flock",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "cd mobile && npm install && npx patch-package",
    "setup": "npm run setup:api && npm run setup:mobile",
    "setup:api": "cd api && python3 -m venv venv && venv/bin/pip install -r requirements.txt",
    "setup:mobile": "npm install",
    "start": "cd mobile && npx expo start",
    "run:api": "cd api && . venv/bin/activate && uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "run:mobile": "cd mobile && npx expo start",
    "expo:dev": "cd mobile && npx expo start --localhost",
    "expo:start:static:build": "cd mobile && npx expo start --no-dev --minify --localhost",
    "expo:static:build": "cd mobile && node scripts/build.js",
    "test:api": "cd api && venv/bin/pytest tests/ -v",
    "lint": "cd mobile && npx expo lint",
    "lint:fix": "cd mobile && npx expo lint --fix",
    "android": "cd mobile && npx expo run:android",
    "ios": "cd mobile && npx expo run:ios"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "patch-package": "^8.0.1",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "expo": "^54.0.33"
  }
}
